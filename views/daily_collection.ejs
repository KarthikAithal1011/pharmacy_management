<div class="container mx-auto px-4">
    <h1 class="text-3xl font-bold text-center text-gray-800 my-10"><i class="fas fa-chart-line"></i> Daily Collection Summary</h1>

    <!-- Today's Sales Summary -->
    <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-modern hover-lift border-l-4 border-green-500">
        <h2 class="text-2xl font-bold text-gray-700 mb-4">Today's Collection</h2>
        <p class="text-lg"><i class="fas fa-calendar-day"></i> Date: <span class="font-semibold"><%= todayDate %></span></p>
        <p class="text-lg"><i class="fas fa-rupee-sign"></i> Total Before Discount: <span class="font-semibold">₹<%= todayTotalBefore.toFixed(2) %></span></p>
        <p class="text-lg"><i class="fas fa-rupee-sign"></i> Total After Discount: <span class="font-semibold">₹<%= todayTotalAfter.toFixed(2) %></span></p>
    </div>

    <hr class="my-10">

    <!-- Date Lookup Section -->
    <div class="max-w-md mx-auto">
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">Look Up Sales by Date</h2>
        <!-- Date Picker Form -->
        <div class="bg-white p-6 rounded-lg shadow-modern hover-lift">
            <form id="date-lookup-form" class="flex items-stretch space-x-4">
                <label for="date" class="font-semibold text-gray-700">Enter Date:</label>
                <input type="date" id="date" name="date" class="form-input flex-grow block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i class="fas fa-search"></i> Find
                </button>
            </form>
        </div>

        <!-- Sales Result for Selected Date -->
        <div id="selected-date-results" class="mt-6 bg-white p-6 rounded-lg shadow-modern hover-lift border-l-4 border-blue-500" style="display: none;">
            <h3 class="text-xl font-bold text-gray-700 mb-4">Collection for Selected Date</h3>
            <p class="text-lg"><i class="fas fa-calendar-day"></i> Date: <span class="font-semibold" id="selected-date-label"></span></p>
            <p class="text-lg"><i class="fas fa-rupee-sign"></i> Total Before Discount: <span class="font-semibold" id="selected-total-before-label"></span></p>
            <p class="text-lg"><i class="fas fa-rupee-sign"></i> Total After Discount: <span class="font-semibold" id="selected-total-after-label"></span></p>
        </div>
        <div id="no-results-message" class="mt-6 p-4 bg-gray-100 rounded-lg" style="display: none;">
            <p class="text-gray-500 text-center">No sales data found for the selected date.</p>
        </div>
    </div>

    <div class="text-center mt-10 mb-10">
        <a href="/menu" class="inline-block px-8 py-3 bg-blue-600 text-white text-lg rounded-full font-bold hover:bg-blue-700 transition-transform transform hover:scale-105 shadow-lg">
            <i class="fas fa-arrow-left"></i> Back to Menu
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('date-lookup-form');
        const dateInput = document.getElementById('date');
        const resultsContainer = document.getElementById('selected-date-results');
        const dateLabel = document.getElementById('selected-date-label');

        const totalAfterLabel = document.getElementById('selected-total-after-label');
        const totalBeforeLabel = document.getElementById('selected-total-before-label');
        const noResultsMessage = document.getElementById('no-results-message');
        const submitButton = form.querySelector('button[type="submit"]');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            const selectedDate = dateInput.value;
            if (!selectedDate) {
                return; // Don't search if date is empty
            }

            // Show loading state
            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Finding...';
            resultsContainer.style.display = 'none';
            noResultsMessage.style.display = 'none';

            fetch(`/api/daily-collection/${selectedDate}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.error) {
                        alert(data.error);
                        return;
                    }
                    
                    // The API sends back the date in YYYY-MM-DD format. We need to add 1 day to display it correctly due to timezone issues.
                    const dateParts = data.date.split('-');
                    const utcDate = new Date(Date.UTC(dateParts[0], dateParts[1] - 1, dateParts[2]));
                    const formattedDate = utcDate.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric', timeZone: 'UTC' });

                    dateLabel.textContent = formattedDate;

                    totalAfterLabel.textContent = `₹${data.totalAfterDiscount.toFixed(2)}`;
                    totalBeforeLabel.textContent = `₹${data.totalBeforeDiscount.toFixed(2)}`;

                    resultsContainer.style.display = 'block';
                    
                    if (data.totalAfterDiscount <= 0) {
                        noResultsMessage.style.display = 'block';
                        resultsContainer.style.display = 'none';
                    } else {
                        noResultsMessage.style.display = 'none';
                    }
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                    alert('An error occurred while fetching sales data. Please try again.');
                })
                .finally(() => {
                    // Restore button
                    submitButton.disabled = false;
                    submitButton.innerHTML = '<i class="fas fa-search"></i> Find';
                });
        });
    });
</script>
