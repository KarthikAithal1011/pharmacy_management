<% title = 'Dashboard - Pharmacy Management' %>
<% showNav = true %>
<% showFooter = true %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">
      <i class="fas fa-pills text-primary-600 mr-3"></i>Community Pharmacy Dashboard
    </h1>
    <div class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary-500 to-secondary-500 text-white rounded-full font-medium shadow-lg">
      <i class="fas fa-user mr-2"></i>Welcome, <%= username %>!
    </div>
  </div>

  <!-- Search Section -->
  <div class="glass-effect shadow-modern rounded-xl p-6 mb-8 hover-lift">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <i class="fas fa-search text-primary-600 text-xl"></i>
      <input
        type="text"
        id="searchInput"
        placeholder="Search for medicine..."
        class="flex-1 max-w-md px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
      >
      <button
        id="searchButton"
        class="px-6 py-3 bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium rounded-lg hover:from-primary-700 hover:to-primary-800 transition-all duration-200 transform hover:scale-105 hover:shadow-lg flex items-center gap-2"
      >
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </div>

  <!-- Alerts -->
  <% if (typeof error !== 'undefined' && error) { %>
  <div class="bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-lg mb-6 animate-slide-up flex items-center">
    <i class="fas fa-exclamation-triangle mr-3 text-xl"></i>
    <span class="font-medium">Error:</span> <%= error %>
  </div>
  <% } %>

  <% if (typeof success !== 'undefined' && success) { %>
  <div class="bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-lg mb-6 animate-slide-up flex items-center">
    <i class="fas fa-check-circle mr-3 text-xl"></i>
    <span class="font-medium">Success:</span> <%= success %>
  </div>
  <% } %>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Medicines Table -->
    <div class="lg:col-span-2">
      <div class="glass-effect shadow-modern rounded-xl overflow-hidden hover-lift">
        <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-4">
          <h2 class="text-xl font-semibold flex items-center">
            <i class="fas fa-list mr-3"></i>Medicines and Stocks Available
          </h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-pills mr-2"></i>Medicine
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-boxes mr-2"></i>Stock (Strips)
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-tags mr-2"></i>Price per Strip
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-tablets mr-2"></i>Tablets per Strip
                </th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                  <i class="fas fa-rupee-sign mr-2"></i>Price per Tablet
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% medicines.forEach(medicine => { %>
              <tr class="hover:bg-gray-50 transition-colors duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="text-sm font-medium text-gray-900">
                      <%= medicine.medicine %>
                    </div>
                    <% if (medicine.stock < 10 && medicine.stock > 0) { %>
                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 animate-pulse">
                      Low Stock
                    </span>
                    <% } %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if (medicine.stock > 0) { %>
                    <span class="text-sm text-gray-900"><%= medicine.stock %></span>
                  <% } else { %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 animate-pulse">
                      Out of Stock
                    </span>
                  <% } %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  ₹<%= medicine.price_per_strip %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= medicine.tablets_in_a_strip %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  ₹<%=(medicine.price_per_strip / medicine.tablets_in_a_strip).toFixed(2) %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Add to Cart Form -->
      <form action="/add-to-cart" method="POST" class="glass-effect shadow-modern rounded-xl p-6 hover-lift">
        <h3 class="text-lg font-semibold text-gray-900 mb-6 text-center flex items-center justify-center">
          <i class="fas fa-shopping-cart text-primary-600 mr-2"></i>Add to Cart
        </h3>

        <div class="space-y-4">
          <div>
            <label for="medicine" class="block text-sm font-medium text-gray-700 mb-1">
              <i class="fas fa-pills mr-2 text-primary-600"></i>Search Medicine
            </label>
            <input
              type="text"
              name="medicine"
              id="medicine"
              list="medicines-list"
              required
              placeholder="Type to search medicine"
              value="<%= typeof formData !== 'undefined' && formData.medicine && !clearForm ? formData.medicine : '' %>"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
            >
            <datalist id="medicines-list">
              <% medicines.forEach(medicine => { %>
              <option value="<%= medicine.medicine %>">
              <% }); %>
            </datalist>
          </div>

          <div>
            <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">
              <i class="fas fa-hashtag mr-2 text-primary-600"></i>Quantity (Tablets)
            </label>
            <input
              type="number"
              name="quantity"
              id="quantity"
              min="1"
              required
              value="<%= typeof formData !== 'undefined' && formData.quantity && !clearForm ? formData.quantity : '' %>"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
            >
          </div>

          <button
            type="submit"
